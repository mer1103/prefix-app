<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_height="56dp">

    <ImageView
        android:id="@+id/contact_check_unchecked"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_check_box_outline_blank_black_24dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/contact_check_checked"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_check_box"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="1"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/contact_phone_detail"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16dp"
            android:fontFamily="@font/poppins"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/contact_phone_detail_result"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16dp"
            android:fontFamily="@font/poppins"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>